{
  "variables": {
    "source_image": ""
  },
  "builders": [{
    "type": "openstack",
    "source_image": "{{ user `source_image` }}",
    "ssh_username": "ubuntu",
    "openstack_provider": "nova",
    "image_name": "Packer1404",
    "flavor": "1"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": ["sleep 5"]
  },
  {
    "type": "shell",
    "script": "../packer_files/UbuntuBootstrap.sh",
    "pause_before": "1s"
  }]
}

